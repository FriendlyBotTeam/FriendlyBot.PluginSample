<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FriendlyBotPluginSample.Views.ContentView">

  <TabControl>
    <TabItem Header="{Binding FirstTabText}" VerticalContentAlignment="Center">
        <ListBox Items="{Binding Data}"></ListBox>
    </TabItem>
    <TabItem Header="{Binding SecondTabText}" VerticalContentAlignment="Center">
      <ListBox Items="{Binding DataWtf}"></ListBox>
    </TabItem>
    <TabItem Header="{Binding TroisiemeTabText}" VerticalContentAlignment="Center">
      <TextBlock Text="Bienvenu sur la page d'achat" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </TabItem>
  </TabControl>
</UserControl>
